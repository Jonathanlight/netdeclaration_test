<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<kwo-interface>
<fieldset label="$fieldset_label">

<notebook>

<page label="définition">
 <form>
  <hbox>
   <vbox>
    <elem field="name" />
    <elem field="path" type="file" />
    <elem field="status" />
    <elem field="locales" />
    <elem field="description" rows="3" />
    <elem field="image" type="image" filter="image" />
   </vbox>
   <vbox localized="true">
    <elem field="title" label="intitulé" />
   </vbox>
  </hbox>
  <launcher actions="store"/>
 </form>
</page>

<page label="opérations" built="$is_loaded">
 <hbox>
  <vbox width="10%">
   <box label="actions">
    <link icon="details" />
   </box>
  </vbox>
  <vbox><deck /></vbox>
 </hbox>
</page>

</notebook>

</fieldset>
</kwo-interface>
