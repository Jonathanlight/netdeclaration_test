<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<kwo-interface>
<fieldset label="$fieldset_label">

<notebook>
 <page label="définition">
  <form>
    <hbox>
     <vbox width="30%">
      <elem field="code" required="true" />
      <elem field="app" />
      <elem field="extension_id" options="Extension::asHash()" label="extension associée" />
      <elem field="locales" />
      <elem field="description" label="à propos" />
     </vbox>
     <vbox localized="true">
      <elem field="title" label="titre" />
      <elem field="description" rows="4" label="description" />
      <elem field="content" mode="rich" rows="16" label="contenu" />
     </vbox>
    </hbox>
    <launcher/>
   </form>
  </page>
  <page label="opérations" built="$is_loaded">
   <hbox>
    <vbox width="10%">
     <box label="actions">
      <link icon="details" />
      <link icon="note" />
     </box>
    </vbox>
    <vbox>
     <deck />
    </vbox>
  </hbox> 
 </page>
</notebook>
</fieldset>
</kwo-interface>
