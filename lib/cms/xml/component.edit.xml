<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<kwo-interface>
<fieldset label="$fieldset_label">

<notebook>

<page label="définition">
 <form>
  <hbox>
   <vbox width="40%">
    <elem field="name" />
    <hbox>
     <vbox><elem field="status" type="yesno" /></vbox>
     <vbox><elem field="position" /></vbox>
    </hbox>    
   </vbox>
   <vbox>
    <elem field="content" mode="rich"  rows="20" />
   </vbox>
  </hbox>
  <launcher/>
 </form>
</page>

<page label="opérations" built="$is_loaded">
 <hbox>
  <vbox width="10%">
   <box label="actions">
    <link icon="details" />
   </box>
  </vbox>
  <vbox><deck /></vbox>
 </hbox> 
</page>

</notebook>

</fieldset>
</kwo-interface>
